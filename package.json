{
  "name": "school-management-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "description": "School Management System - Mobile & Web Monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "validate": "pnpm lint && pnpm test:run",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "school",
    "management",
    "education",
    "react-native",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@supabase/supabase-js": "^2.91.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "pg": "^8.17.2",
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "react-hook-form": "^7.71.1"
  },
  "pnpm": {
    "overrides": {
      "react-dom": "19.1.0"
    }
  }
}
